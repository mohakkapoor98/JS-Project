<!--
  Step 1: The form must be sharable between the new and edit views.
-->
<form action="<%= (typeof actionPath === 'undefined') ? '/gym' : actionPath %>" , method="POST">
  <% if (typeof actionPath !== 'undefined') { %>
  <input type="hidden" name="id" value="<%= formData.id %>">
  <% } %>

  <div class="form-group">
    <label for="exercise">Exericse Name</label>
    <select name="exercise" class="form-control">
      <option>Exercise type</option>
      <% for (let exercise of exercises) { %>
      <option <%= (exercise === formData.exercise) && 'selected' %> value="<%= exercise %>"><%= exercise %></option>
      <% } %>
    </select>
  </div>

  <div class="form-group">
    <label for="status">Weights</label>
    <select name="status" class="form-control">
      <option value="5">5</option>
      <option value="10">10</option>
      <option value="20">20</option>
      <option value="30">30</option>
      <option value="40">40</option>
      <option value="50">50</option>
      <option value="80">80</option>
      <option value="100">100</option>
    </select>
  </div>

  <div class="form-group">
    <label for="status">Repetitions</label>
    <select name="status" class="form-control">
      <option value="5">5</option>
      <option value="10">10</option>
      <option value="15">15</option>
      <option value="20">20</option>
    </select>
  </div>>
  <div class="form-group">
    <button class="btn btn-dark">Submit</button>
  </div>
</form>